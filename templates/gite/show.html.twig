{% extends 'base.html.twig' %}

{% block title %}Gite
{% endblock %}

{% block body %}
	<h1>Gite</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom du gîte</th>
				<td>{{ gite.name }}</td>
			</tr>
			<tr>
				<th>Description du gîte</th>
				<td>{{ gite.description }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ gite.address }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ gite.city }}</td>
			</tr>
			<tr>
				<th>Code Postal</th>
				<td>{{ gite.zipcode }}</td>
			</tr>
			<tr>
				<th>Département</th>
				<td>{{ gite.departement }}</td>
			</tr>
			<tr>
				<th>Région</th>
				<td>{{ gite.region }}</td>
			</tr>
			<tr>
				<th>Surface</th>
				<td>{{ gite.surface }}</td>
			</tr>
			<tr>
				<th>Nombre de pièces</th>
				<td>{{ gite.rooms }}</td>
			</tr>
			<tr>
				<th>Nombre de lits</th>
				<td>{{ gite.beds }}</td>
			</tr>
			<tr>
				<th>Animaux autorisé ?</th>
				<td>{{ gite.animalAllowed ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Cout pour les animaux</th>
				<td>{{ gite.animalFee }}</td>
			</tr>
			<tr>
				<th>Prix saison basse</th>
				<td>{{ gite.greenPrice }}</td>
			</tr>
			<tr>
				<th>Prix haute saison</th>
				<td>{{ gite.redPrice }}</td>
			</tr>
			<tr>
				<th>Début de la haute saison</th>
				<td>{{ gite.startRed ? gite.startRed|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Fin de la haute saison</th>
				<td>{{ gite.endRed ? gite.endRed|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Crée le</th>
				<td>{{ gite.createdAt ? gite.createdAt|date('d-m-Y H:i') : '' }}</td>
			</tr>
			<tr>
				<th>Modifié le</th>
				<td>{{ gite.updateAt ? gite.updateAt|date('d-m-Y H:i') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary mx-3" href="{{ path('app_gite_index') }}">Retour à la liste des gîtes</a>

	<a class="btn btn-warning mx-3" href="{{ path('app_gite_edit', {'id': gite.id}) }}">Modifier</a>

	{{ include('gite/_delete_form.html.twig') }}
{% endblock %}
